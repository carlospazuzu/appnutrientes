<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DistribuicaoActivity">

    <TextView
            android:text="Nome Usuario"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_nome" android:textSize="30sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/trade_winds"/>
    <android.support.v7.widget.CardView
            android:layout_width="368dp"
            android:layout_height="76dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_nome"
            app:cardBackgroundColor="@color/cardview_light_background" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/cardView2">
        <ImageView
                android:layout_width="97dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/carboidrato"
                android:id="@+id/imageView12"/>
        <TextView
                android:text="Carboidratos: "
                android:textColor="#111"
                android:paddingLeft="120dp"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txt_carboidratos" android:textSize="20sp"
                android:fontFamily="@font/montserrat"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:layout_width="368dp"
            android:layout_height="76dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:cardBackgroundColor="@color/cardview_light_background"
            android:id="@+id/cardView3">
        <ImageView
                android:layout_width="94dp"
                android:layout_height="match_parent" app:srcCompat="@drawable/pizza" android:id="@+id/imageView13"/>
        <TextView
                android:text="Gorduras: "
                android:textColor="#111"
                android:paddingLeft="120dp"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txt_gorduras"
                android:fontFamily="@font/montserrat"
                android:textSize="20sp"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:layout_width="368dp"
            android:layout_height="76dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:cardBackgroundColor="@color/cardview_light_background">
        <ImageView
                android:layout_width="98dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/meat" android:id="@+id/imageView14"/>
        <TextView
                android:text="ProteÃ­nas: "
                android:textColor="#111"
                android:paddingLeft="120dp"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txt_proteinas"
                android:fontFamily="@font/montserrat"
                android:textSize="20sp"/>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>